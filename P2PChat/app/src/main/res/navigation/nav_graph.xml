    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.p2pchat.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_dummyFragment"
            app:destination="@id/dummyFragment" />
    </fragment>
    <fragment
        android:id="@+id/dummyFragment"
        android:name="com.example.p2pchat.DummyFragment"
        android:label="fragment_dummy"
        tools:layout="@layout/fragment_dummy" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.p2pchat.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.p2pchat.chatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
</navigation>